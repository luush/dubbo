<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        	http://code.alibabatech.com/schema/dubbo
        	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 定义了提供方应用信息，用于计算依赖关系。在dubbo-admin或者dubbo-monitor会显示这些信息，方便识别-->
    <dubbo:application name="luush-provider" owner="admin" organization="dubbox"/>
    <!-- 声明注册中心 注册中心暴露服务，注意先开启zookeeper-->
    <dubbo:registry protocol="zookeeper" address="localhost:2181"/>
    <!--用dubbo协议在18889端口暴露服务-->
    <dubbo:protocol name="dubbo" port="18889"></dubbo:protocol>
    <!--用dubbo协议实现定义好的api接口 -->
    <dubbo:service interface="org.lszjaf.dagger.service.TestService" ref="testService" protocol="dubbo"></dubbo:service>
    <dubbo:service interface="org.lszjaf.dagger.service.DubboService" ref="dubboService" protocol="dubbo"></dubbo:service>
    <!--具体实现接口的bean -->
    <bean id="testService" class="org.lszjaf.dagger.service.impl.TestServiceImpl"></bean>
    <bean id="dubboService" class="org.lszjaf.dagger.service.impl.DubboServiceImpl"></bean>
</beans>
 
 
 